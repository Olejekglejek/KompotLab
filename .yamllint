---
extends: default

ignore: |
  _temp-templates/

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  # 240 chars should be enough, but don't fail if a line is longer
  line-length:
    max: 240
    level: warning
  truthy: disable
  new-lines: disable
